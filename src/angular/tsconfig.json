{
    "compilerOptions": {
        "emitDecoratorMetadata": false,
        "experimentalDecorators": true,
        "module": "es2015",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        "lib": [
          "es2015",
          "dom"
        ],
        "outDir": "lib",
        "moduleResolution": "node"
    },
    "files": [
      "src/main.ts",
      "src/app.ts"
    ],
    "angularCompilerOptions": {
      "genDir": "src/ngfactory",
      "skipMetadataEmit": true
    }
}
